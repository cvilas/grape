{
  "version": 7,
  "cmakeMinimumRequired": { "major": 3, "minor": 28, "patch": 0 },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_MODULES": "all",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INSTALL_PREFIX": "/opt/${sourceDirName}"
      }
    },
    {
      "name": "clang",
      "inherits": "base",
      "description": "Configure all modules with clang toolchain",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "${sourceDir}/toolchains/toolchain_clang.cmake",
      "cacheVariables": { 
        "PACKAGE_SUFFIX": "${presetName}"
      }    
    },
    {
      "name": "native",
      "inherits": "base",
      "description": "Configure all modules with native toolchain",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "",
      "cacheVariables": { 
        "ENABLE_LINTER": "OFF",
        "PACKAGE_SUFFIX": "${presetName}"
      }
    },
    {
      "name": "cross",
      "inherits": "base",
      "description": "Configure all modules for Aarch64 cross-build with native toolchain",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "${sourceDir}/toolchains/toolchain_gcc_aarch64.cmake",
      "cacheVariables": { 
        "PACKAGE_SUFFIX": "${presetName}"
      }  
    }
  ]
}
